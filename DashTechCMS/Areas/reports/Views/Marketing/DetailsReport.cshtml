@model IEnumerable<DashTechCMS.Models.Reports.DailyReportModel>

@{
    ViewBag.Title = "Details Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <h2>Candidate Time Line</h2>

            <div class="col-lg-6">
                <form action="@Url.Action("NewClients","Sales",new { @area = "reports"})" method="get">
                    <table class="table table-striped">
                        <tr>
                            <td colspan="3">Filter By Date</td>
                        </tr>
                        <tr>
                            <td>
                                <input type="date" name="stDate" id="stDate" class="form-control" required />
                            </td>
                            <td align="right">
                                <input type="date" name="endDate" id="endDate" class="form-control" required />
                            </td>
                            <td align="right">
                                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> Search</button>
                            </td>
                        </tr>
                    </table>
                </form>
                @*<script>
                    @{
                        DateTime sdt = ViewBag.sdt;
                        DateTime edt = ViewBag.edt;
                    }
                    $("#stDate").val("@sdt.Date.ToString("yyyy-MM-dd")");
                    $("#endDate").val("@edt.Date.ToString("yyyy-MM-dd")");
                    </script>*@
            </div>
        </div>
        <div class="col-md-12" style="overflow:scroll">

            <table class="table  compact nowrap" id="dataTableDailyReport">
                <thead>
                    <tr>
                        <th>
                            Location Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalRecruiters)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCandidates)
                        </th>
                        <th>
                            Today's Submissions
                        </th>
                        <th>
                            Today's Interviews
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalSubmissionTillNow)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalInterviewsTillNow)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalPO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalPOTillNow)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NewCandidateInMarketing)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalRecruiters)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCandidates)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalSubmissions)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalInterviews)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalSubmissionTillNow)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalInterviewsTillNow)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPOTillNow)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NewCandidateInMarketing)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#dataTableDailyReport').DataTable({
            dom: 'Bfrtip', responsive: true, "order": [[3, "desc"]],
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
