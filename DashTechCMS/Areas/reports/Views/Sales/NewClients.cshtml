@model IEnumerable<DashTechCMS.Models.Reports.SalesModel>

@{
    ViewBag.Title = "Client Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <h3>@ViewBag.title</h3>
        <div class="col-lg-6">
            <h3>@ViewBag.title</h3>

            <form action="@Url.Action("NewClients","Sales",new { @area = "reports"})" method="get">
                <table class="table table-striped">
                    <tr>
                        <td colspan="3">Filter By Date</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="date" name="stDate" id="stDate" class="form-control" required />
                        </td>
                        <td align="right">
                            <input type="date" name="endDate" id="endDate" class="form-control" required />
                        </td>
                        <td align="right">
                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> Search</button>
                        </td>
                    </tr>
                </table>
            </form>
            <script>
                @{
                    DateTime sdt = ViewBag.sdt;
                    DateTime edt = ViewBag.edt;
                }
                $("#stDate").val("@sdt.Date.ToString("yyyy-MM-dd")");
                $("#endDate").val("@edt.Date.ToString("yyyy-MM-dd")");
            </script>
        </div>
        <div class="col-md-12">

            <table class="table table-responsive compact nowrap" id="dataTableNewClient">
                <thead>
                    <tr>
                        @*<th>
                                @Html.DisplayNameFor(model => model.CandidateId)
                            </th>*@

                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CandidateStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CandidateName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SalesAssociate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobileNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecurringType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Service)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaidAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaymentStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MarketingStartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VisaStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Technology)
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.CandidateId)
                                </td>*@
                            <td>
                                @item.Date.ToString("MM/dd/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CandidateStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CandidateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalesAssociate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MobileNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecurringType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Service)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaidAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MarketingStartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VisaStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Technology)
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>


    </div>
</section>


<script>
    $(document).ready(function () {
        $('#dataTableNewClient').DataTable({
            dom: 'Bfrtip', responsive: true, "order": [[3, "desc"]],
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>